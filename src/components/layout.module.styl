.container
    align-items center
    background-color #003F39
    display flex
    flex-direction column
    height 100%

    border-radius = 10px

    .header
        display: flex;
        align-items: center;
        background-color #94ECBE
        border-radius border-radius

        icon_size = 24px

        .icon
            max-height icon_size
            max-width icon_size
            padding (icon_size / 4)px
        
        .logo
            max-height icon_size * 2
            max-width icon_size * 2
            padding (icon_size / 2)px

    .content
        background-color #FFCDB5
        border-radius: border-radius
        flex 1
        margin 10px
        padding 10px
        text-align center

    .footer
        background-color #90EE90
        border-radius border-radius border-radius 0px 0px
        padding 10px;
