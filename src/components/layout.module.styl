.container
    align-items center
    background-color #003F39
    display flex
    flex-direction column
    height 100%
    padding-left 10px
    padding-right 10px

    border-radius = 10px

    .header
        display flex
        align-items center
        background-color #94ECBE
        border-radius border-radius

        icon_size = 24px
        icon_padding = (icon_size / 4)px

        .icon
            max-height icon_size
            max-width icon_size
            padding icon_padding

        logo_size = icon_size * 2
        
        .logo
            max-height logo_size
            max-width logo_size
            padding (icon_size / 4)px
            padding-right = (logo_size / 4)px

    .content
        border 1px solid white
        border-radius border-radius
        flex 1
        padding-left 10px
        padding-right 10px
        margin-top 10px
        margin-bottom 10px
        max-width 840px
        text-align center
        color  white

    .footer
        background-color #94ECBE
        border-radius border-radius border-radius 0px 0px
        padding 0px 10px 10px 10px
