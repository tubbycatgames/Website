@require "./colors"

.links
    display flex
    border-color primary
    border-style solid 
    border-width 1px 0px 0px 0px
    justify-content space-evenly
    
    a
        flex 1
        text-align center
        text-decoration none

    a:not(:last-child) 
        border-color primary
        border-style solid 
        border-width 0px 1px 0px 0px

    a:hover
        background-color tertiary

        p
            color secondary

    p
        color primary
        margin-bottom 2px
        margin-top 2px
